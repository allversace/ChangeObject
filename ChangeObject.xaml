<Window x:Class="WpfApp2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" WindowStartupLocation="CenterScreen" WindowStyle="None" AllowsTransparency="True" Background="Gray">
    <Grid>
        <Rectangle Name="Rectangle" Height="100" Fill="IndianRed" Width="100" Margin="350,125,350,225"/>
        <TextBox Name="Count" HorizontalAlignment="Left" Margin="69,321,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Background="LightGray" FontSize="20" TextAlignment="Center" PreviewKeyDown="Count_PreviewKeyDown" PreviewTextInput="Count_PreviewTextInput"/>
        <Button Name="Change" Click="Change_OnClick" Content="Изменить" HorizontalAlignment="Left" Margin="60,376,0,0" VerticalAlignment="Top" FontSize="20" Height="40" Width="138"/>
        <Button x:Name="CloseBtn" Content="Закрыть" HorizontalAlignment="Left" Margin="703,10,0,0" VerticalAlignment="Top" FontSize="20" Height="52" Width="87" Click="CloseBtn_Click"/>
    </Grid>
</Window>
